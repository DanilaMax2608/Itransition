@{
    ViewData["Title"] = "Fake Data Generator";
}

<h2>Fake Data Generator</h2>

<form id="dataForm">
    <div>
        <label for="region">Region:</label>
        <select id="region" name="region">
            <option value="en_US">USA (English)</option>
            <option value="pl_PL">Poland (Polish)</option>
            <option value="ru_RU">Russia (Russian)</option>
        </select>
    </div>
    <div>
        <label for="errorRate">Error Rate:</label>
        <input type="range" id="errorRateSlider" name="errorRate" min="0" max="10" step="0.25" value="0">
        <input type="number" id="errorRateInput" name="errorRate" min="0" max="1000" step="0.01" value="" style="width: 100px;">
    </div>
    <div>
        <label for="seed">Seed:</label>
        <input type="number" id="seed" name="seed" value="0">
        <button type="button" id="randomSeed">Random</button>
    </div>
</form>

<div id="tableContainer" style="height: 400px; overflow-y: auto;">
    <table id="dataTable">
        <thead>
            <tr>
                <th>Number</th>
                <th>ID</th>
                <th>Full Name</th>
                <th>Address</th>
                <th>Phone Number</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
